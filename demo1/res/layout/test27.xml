<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:text="类别管理"
         android:textSize="50sp"
         />
    <RadioGroup         
         android:id="@+id/tj"      
         android:layout_width="fill_parent"   
         android:layout_height="wrap_content"   
         android:checkedButton="@+id/zc"   
         android:gravity="center"
         android:orientation="horizontal"
         android:paddingTop="30sp">    
    <RadioButton          
           android:id="@+id/sr"   
           android:layout_width="wrap_content"     
           android:layout_height="wrap_content"            
           android:text="收入统计"
           android:textSize="30sp"/>      
    <RadioButton    
           android:id="@+id/zc"            
           android:layout_width="wrap_content"    
           android:layout_height="wrap_content"  
           android:text="支出统计"
           android:textSize="30sp"/>
   </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="200sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别名称："
        android:textSize="20sp"/>
    <EditText 
        android:id="@+id/et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别说明："
        android:textSize="20sp"/>
    <EditText 
        android:id="@+id/et2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout> 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加" />
    <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新" />
    <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回" />
            </LinearLayout>
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <EditText 
            android:id="@+id/et3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入要删除数据的序号"
        />
        <Button 
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>

      </LinearLayout>
</LinearLayout>